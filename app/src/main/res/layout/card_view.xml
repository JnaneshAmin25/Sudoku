<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:background="@drawable/background_dialog_timer_selection">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/Timer_Mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/timer_mode"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppinsregular"/>

            <TextView
                android:id="@+id/timer_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:layout_marginStart="5dp"
                android:textSize="16sp"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/grey"/>

            <TextView
                android:id="@+id/dateTimeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginStart="150dp"
                android:fontFamily="@font/poppinsregular"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/secondndHalf_Group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/mistake_score_group"
                android:layout_width="170dp"
                android:layout_height="60dp">
                <LinearLayout
                    android:id="@+id/scoreGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/scoreLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/score"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:fontFamily="@font/poppinsregular"/>

                    <TextView
                        android:id="@+id/scoreValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginStart="5dp"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppinsregular"
                        android:textColor="@color/grey"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mistakesGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/scoreGroup"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mistakesLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mistakes"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:fontFamily="@font/poppinsregular"/>

                    <TextView
                        android:id="@+id/mistakesValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/poppinsregular"
                        android:textColor="@color/grey"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/statueGroup"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center"
                android:padding="10dp">

                <TextView
                    android:id="@+id/completionText"
                    android:layout_width="170dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text=""
                    android:fontFamily="@font/poppinsregular"
                    android:textSize="18sp"
                    android:background="@drawable/rounded_status_text"/>

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
